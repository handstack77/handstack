        <PackageReference Include="Pomelo.Extensions.Caching.MySql" Version="2.2.0" />
    </ItemGroup>

    <ItemGroup Label="dbclient, function, logger, repository, transact, wwwroot">
        <PackageReference Include="Sqids" Version="3.1.0" />
